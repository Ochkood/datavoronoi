PORT=5001
NODE_ENV=development
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>/<db_name>

JWT_ACCESS_SECRET=change_me_access_secret
JWT_REFRESH_SECRET=change_me_refresh_secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Single frontend origin
CLIENT_URL=http://localhost:3000

# Optional: comma-separated list (supports wildcard like *.vercel.app)
# CLIENT_URLS=https://yourapp.vercel.app,https://your-custom-domain.com,*.vercel.app

# Optional cloud storage
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
# Optional: default root folder name in cloudinary
# CLOUDINARY_UPLOAD_FOLDER=datanews

# Optional: rate limit tuning
# TRUST_PROXY=1
# API_READ_RATE_WINDOW_MS=900000
# API_READ_RATE_MAX=3000
# API_WRITE_RATE_WINDOW_MS=900000
# API_WRITE_RATE_MAX=600
# AUTH_RATE_WINDOW_MS=900000
# AUTH_RATE_MAX=80
